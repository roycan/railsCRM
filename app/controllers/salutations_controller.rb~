class SalutationsController < ApplicationController


	def index
		render html: "Index page here"
	end
	
	def destroy
		# uses method :delete
	end
	
	def edit
		render html: "Edit page here"
	end
	
	def update
		# update data from 'edit' action
	end
	

	
		
	def show
		# render plain: "Show page here"
		@salutation = Salutations.find(params[:id])
	end		
	
	
	def new
		# render plain: "New page here"
		@salutation = Salutation.new
	end

	


  def create
  	 # render plain: "Create page here"
    @salutation = Salutation.find(params[:salutation_id])
    @person = @salutation.people.create(person_params)
    redirect_to salutation_path(@salutation)
  end


	 
	private
	def salutation_params
		params.require(:salutation).permit(:title, :order)
	end	

	

end
